    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:text="American Sign Language (ASL) Club"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/textView"
                android:onClick="onClick"
                android:clickable="true"/>
            <Space
                android:layout_width="1dp"
                android:layout_height="5dp"/>
            <TextView
                android:text="Amnesty International"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView1" />
            <Space
                android:layout_width="1dp"
                android:layout_height="5dp"/>
            <TextView
                android:text="Art Club"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView2" />
            <Space
                android:layout_width="1dp"
                android:layout_height="5dp"/>
            <TextView
                android:text="Book Club"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView3" />
            <Space
                android:layout_width="1dp"
                android:layout_height="5dp"/>
            <TextView
                android:text="Bowling Club"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView4" />
            <Space
                android:layout_width="1dp"
                android:layout_height="5dp"/>
            <TextView
                android:text="Chess Club"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView5" />
            <Space
                android:layout_width="1dp"
                android:layout_height="5dp"/>
            <TextView
                android:text="Chinese Club"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView6" />
            <Space
                android:layout_width="1dp"
                android:layout_height="5dp"/>
            <TextView
                android:text="Composers Forum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView7" />
            <Space
                android:layout_width="1dp"
                android:layout_height="5dp"/>

            <TextView
                android:text="Computer Club"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView8" />
            <Space
                android:layout_width="1dp"
                android:layout_height="5dp"/>
            <TextView
                android:text="DECA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView9" />
            <Space
                android:layout_width="1dp"
                android:layout_height="5dp"/>
            <TextView
                android:text="Dream Commission Society"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView10" />
            <Space
                android:layout_width="1dp"
                android:layout_height="5dp"/>
            <TextView
                android:text="Drones and Remote Sensing R/C Club"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView11" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
